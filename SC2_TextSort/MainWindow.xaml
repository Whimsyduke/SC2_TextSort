<Window x:Class="SC2_TextSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC2_TextSort"
        xmlns:excel="http://propertytools.org/wpf"
        mc:Ignorable="d"
        Title="SC2_TextSort" Height="120" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Galaxy Path:" Grid.Column="0" Grid.Row="0" Margin="3" VerticalAlignment="Center"/>
        <TextBox Name="TextBox_GalaxyPath" Grid.Column="1" Grid.Row="0" Margin="3"/>
        <Button Name="Button_SelectGalaxyPath" Grid.Column="2" Grid.Row="0" Margin="3" Padding="5" Content="Path" Click="Button_SelectGalaxyPath_Click"/>
        <TextBlock Text="Text Path:" Grid.Column="0" Grid.Row="1" Margin="3" VerticalAlignment="Center"/>
        <TextBox Name="TextBox_TextPath" Grid.Column="1" Grid.Row="1" Margin="3"/>
        <Button Name="Button_SelectTextPath" Grid.Column="2" Grid.Row="1" Margin="3" Padding="5" Content="Path"/>
        <TextBlock Text="Output Path:" Grid.Column="0" Grid.Row="2" Margin="3" VerticalAlignment="Center"/>
        <TextBox Name="TextBox_OutputPath" Grid.Column="1" Grid.Row="2" Margin="3"/>
        <Button Name="Button_SelectOutputPath" Grid.Column="2" Grid.Row="2" Margin="3" Padding="5" Content="Path" Click="Button_SelectOutputPath_Click_1"/>
        <Button Name="Button_Confirm" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Margin="3" Padding="5" Content="Confirm"/>
    </Grid>
</Window>
