<Window x:Class="SC2_TextSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC2_TextSort"
        xmlns:excel="http://propertytools.org/wpf"
        mc:Ignorable="d"
        Title="SC2_TextSort" Height="250" Width="800" MinHeight="250" MaxHeight="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Operation Mode" Grid.Row="0" Margin="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="RadioButton_ToCsvFile" Grid.Column="0" GroupName="Mode" Content="Generation CSV" Margin="3" Checked="RadioButton_ToCsvFile_Checked"/>
                <RadioButton Name="RadioButton_ToTxtFile" Grid.Column="1" GroupName="Mode" Content="Generation TXT" Margin="3" Checked="RadioButton_ToTxtFile_Checked"/>
                <CheckBox Name="CheckBox_KeepZH_CN" Grid.Column="2" Content="Keep not translated text"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="PathSeting"  Grid.Row="1" Margin="3">
            <StackPanel Name="StackPanel_Main" Orientation="Vertical">
                <Grid Name="Grid_TextPath">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Text Path:" Grid.Column="0" Margin="3" VerticalAlignment="Center"/>
                    <TextBox Name="TextBox_TextPath" Grid.Column="1" VerticalContentAlignment="Center" Margin="3"/>
                    <Button Name="Button_SelectTextPath" Grid.Column="2" Margin="3" Padding="3" Content="Path" Click="Button_SelectTextPath_Click"/>
                </Grid>
                <Grid Name="Grid_GalaxyPath">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Galaxy Path:" Grid.Column="0" Margin="3" VerticalAlignment="Center"/>
                    <TextBox Name="TextBox_GalaxyPath" Grid.Column="1" VerticalContentAlignment="Center" Margin="3"/>
                    <Button Name="Button_SelectGalaxyPath" Grid.Column="2" Margin="3" Padding="3" Content="Path" Click="Button_SelectGalaxyPath_Click"/>
                </Grid>
                <Grid Name="Grid_InputPath">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Input Path:" Grid.Column="0" Margin="3" VerticalAlignment="Center"/>
                    <TextBox Name="TextBox_InputPath" Grid.Column="1" VerticalContentAlignment="Center" Margin="3"/>
                    <Button Name="Button_SelectInputPath" Grid.Column="2" Margin="3" Padding="3" Content="Path" Click="Button_SelectInputPath_Click"/>
                </Grid>
                <Grid Name="Grid_OutputPath" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Output Path:" Grid.Column="0" Margin="3" VerticalAlignment="Center"/>
                    <TextBox Name="TextBox_OutputPath" Grid.Column="1" VerticalContentAlignment="Center" Margin="3"/>
                    <Button Name="Button_SelectOutputPath" Grid.Column="2" Margin="3" Padding="3" Content="Path" Click="Button_SelectOutputPath_Click"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        <Button Name="Button_Confirm" Grid.Row="2" Grid.RowSpan="3" Margin="3" Padding="3" Content="Confirm" Click="Button_Confirm_Click"/>
    </Grid>
</Window>
